{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build and debug active file",
            "command": "ninja",
            "args": ["-v"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}