{
    "tasks": [
        {
            "type": "shell",
            "label": "debug-build",
            "command": "ninja",
            "args": ["-v"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "ninja clean",
            "command": "ninja",
            "args": ["-t", "clean"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "clean",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}